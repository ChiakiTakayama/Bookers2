<main>
 <% flash.each do |key, value| %>
    <%= content_tag(:div, value, class: "#{key}") %>
    <% end %>
 <p id="notice"></p>
 <div class='container px-5 px-sm-0'>
  <div class='row'>
   <div class='col-md-3'>
    <%= render 'users/user-info', user: @user %>
    <%= render 'new', books: @book %>
   </div>

   <div class='col-md-8 offset-md-1'>
    <h2>Book detail</h2>
    <table class='table'>
     <tbody>
      <tr>

        <td><%= link_to user_path(@user) do %>
         <%= image_tag @user.get_profile_image(100,100) %>
         <br>
         <%= @user.name %>
         <% end %>
        </td>

        <td><%= link_to @bookfind.title %></td>

        <td><%= @bookfind.body %></td>

        <td><% if @bookfind.user == current_user %>
         <%= link_to "Edit", edit_book_path(@bookfind.id), class:"btn-sm btn-success" %>
         <% end %>
         </td>

         <td><% if @bookfind.user == current_user %>
         <%= link_to "Destroy", book_path(@bookfind), class:"btn-sm btn-danger destroy(@bookfind)",method: :delete, "data-confirm" => "本当に削除しますか？" %>
         <% end %>
        </td>
      </tr>
     </tbody>
    </table>
   </div>

  </div>
 </div>
</main>