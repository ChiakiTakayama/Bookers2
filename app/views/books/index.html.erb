 <% @books.each do |book| %>
 <% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div>
<%= render 'users/user-info', user: @user %>
<%= render 'new', books: @books %>
</div>

<div>
<h2>投稿一覧</h2>
  <p>投稿ユーザー画像：<%= image_tag 'no_image.jpeg' %></p>
  <!--<p>投稿ユーザー画像：< %= image_tag @book.user.get_profile_image(100,100) %></p>-->
  <!--17章を元に変更しようとしたらshowの方でNameErrprが-->
   <%= link_to book_path(book.id) do %>
  <p>Title : <%= book.title %></p>
  <% end %>
  <p>Opinion : <%= book.body %></p>
</div>
<% end %>
