<main>
  <p id="notice"></p>
  <div class='container px-5 px-0'>
    <div class='row'>
      <div class='col-md-3'>
 <% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div>
 <%= render 'users/user-info', user: @user %>
 <!--< %= render 'new', book: @book %>-->
 <%= render 'new', books: @book %>
</div>
</div>

<div class='col-8 offset-md-1'>
 <h2>Books</h2>
 <table class='table table-hover table-inverse'>
   <thead>
     <tr>
       <th>Title</th>
       <th>Opinion</th>
       <th colspan="3"></th>
     </tr>
    </thead>
    
    <% @books.each do |book| %>
     <tbody>
      <tr>
       <td><%= image_tag 'no_image.jpeg' %>
       <%= link_to book_path(book.id) do %>
       </td>
       <td><%=link_to book.title %></td>
       <td>Opinion :<%= book.body %></td>
     <% end %>
    </tr>
  </tbody>
  <% end %>
 </table>
</div>
</div>
</main>