<% @books.each do |book| %>
<main>
  <p id="notice"><%= notice %></p>
  <div class='container px-5 px-sm-0'>
    <div class='row'>
      <div class='col-md-3'>
        <%= render 'user-info', user: @user %>
        <%= render 'books/new', books: @book %>
      </div>
     <div class='col-md-8 offset-md-1'>
       <h2>Books</h2>
       <table class='table table-hover table-inverse'>
    <!--< % @books.each do |book| %>-->
         <thead>
    <!--< %= image_tag book.get_image %>-->
           <tr>
             <th></th>
             <th>Title</th>
             <th>Opinion</th>
             <th colspan="3"></th>
           </tr>
         </thead>
         <tbody>
           <tr>
             <td><a href><%= image_tag book.user.get_profile_image(100,100) %>
             <%= link_to book_path(book.id) do %>
             <% end %>
             </td>
             <td>Title:<%= book.title %>
             <%= link_to books_path do%>
             <% end %>
             </td>
             <td>Opinion：<%= book.body %></td>
        <!--<p>ユーザーネーム：< %= post_image.user.name %></p>-->
        <!--ユーザーネーム部分省いたら普通にルーティングおkだった-->
